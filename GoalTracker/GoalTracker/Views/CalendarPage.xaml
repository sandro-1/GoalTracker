            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding TapCommand}" CommandParameter="26"/>
            </Label.GestureRecognizers>
        </Label>
        <BoxView Grid.Row="4" Grid.Column="5" BackgroundColor="White"/>
