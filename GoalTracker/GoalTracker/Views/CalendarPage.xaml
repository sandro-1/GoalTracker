            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding TapCommand}" CommandParameter="28"/>
            </Label.GestureRecognizers>
        </Label>

        <!--DAYS 29-31-->
        <BoxView Grid.Row="5" Grid.Column="0" BackgroundColor="White"/>
        <Label Grid.Row="5" Grid.Column="0" Text="29" IsVisible="{Binding ShowDate1}" FontSize="Micro" Margin="0,2" HorizontalTextAlignment="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding TapCommand}" CommandParameter="29"/>
            </Label.GestureRecognizers>
        </Label>
        <BoxView Grid.Row="5" Grid.Column="1" BackgroundColor="White"/>
        <Label Grid.Row="5" Grid.Column="1" Text="30" IsVisible="{Binding ShowDate2}" FontSize="Micro" Margin="0,2" HorizontalTextAlignment="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding TapCommand}" CommandParameter="30"/>
            </Label.GestureRecognizers>
        </Label>
        <BoxView Grid.Row="5" Grid.Column="2" BackgroundColor="White"/>
        <Label Grid.Row="5" Grid.Column="2" Text="31" IsVisible="{Binding ShowDate3}" FontSize="Micro" Margin="0,2" HorizontalTextAlignment="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding TapCommand}" CommandParameter="31"/>
            </Label.GestureRecognizers>
        </Label>
        <BoxView Grid.Row="5" Grid.Column="3" BackgroundColor="White"/>
        <BoxView Grid.Row="5" Grid.Column="4" BackgroundColor="White"/>
        <BoxView Grid.Row="5" Grid.Column="5" BackgroundColor="White"/>
        <BoxView Grid.Row="5" Grid.Column="6" BackgroundColor="White"/>

    </Grid>

</ContentPage>