            </Label.GestureRecognizers>
        </Label>
        <BoxView Grid.Row="2" Grid.Column="1" BackgroundColor="White"/>
        <Label Grid.Row="2" Grid.Column="1" Text="9" FontSize="Micro" Margin="0,2" HorizontalTextAlignment="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding TapCommand}" CommandParameter="9"/>
