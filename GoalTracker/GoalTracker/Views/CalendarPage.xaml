            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding TapCommand}" CommandParameter="14"/>
            </Label.GestureRecognizers>
        </Label>

        <!--DAYS 15-21-->
        <BoxView Grid.Row="3" Grid.Column="0" BackgroundColor="White"/>
        <Label Grid.Row="3" Grid.Column="0" Text="15" FontSize="Micro" Margin="0,2" HorizontalTextAlignment="Center">
            <Label.GestureRecognizers>
