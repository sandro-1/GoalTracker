        </Label>
        <BoxView Grid.Row="2" Grid.Column="2" BackgroundColor="White"/>
        <Label Grid.Row="2" Grid.Column="2" Text="10" FontSize="Micro" Margin="0,2" HorizontalTextAlignment="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding TapCommand}" CommandParameter="10"/>
            </Label.GestureRecognizers>
        </Label>
        <BoxView Grid.Row="2" Grid.Column="3" BackgroundColor="White"/>
        <Label Grid.Row="2" Grid.Column="3" Text="11" FontSize="Micro" Margin="0,2" HorizontalTextAlignment="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding TapCommand}" CommandParameter="11"/>
            </Label.GestureRecognizers>
        </Label>
        <BoxView Grid.Row="2" Grid.Column="4" BackgroundColor="White"/>
        <Label Grid.Row="2" Grid.Column="4" Text="12" FontSize="Micro" Margin="0,2" HorizontalTextAlignment="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding TapCommand}" CommandParameter="12"/>
            </Label.GestureRecognizers>
        </Label>
        <BoxView Grid.Row="2" Grid.Column="5" BackgroundColor="White"/>
