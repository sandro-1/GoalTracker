<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:GoalTracker"
             mc:Ignorable="d"
             x:Class="GoalTracker.Views.CalendarPage"
             >

    <ContentPage.BindingContext>
        <local:CalendarPageViewModel/>
    </ContentPage.BindingContext>

    <NavigationPage.TitleView>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ImageButton Command="{Binding LeftArrowClick}" Grid.Column="0" Source="leftArrow.png" BackgroundColor="DodgerBlue" Margin="3,10,17,10" HorizontalOptions="Center"/>
            <Label Text="{Binding MonthYear}" Grid.Column="1" Margin="0,0,20,0" TextColor="White" FontSize="Medium" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
            <ImageButton Command="{Binding RightArrowClick}" Grid.Column="2" Source="rightArrow.png" BackgroundColor="DodgerBlue" Margin="0,10,20,10" HorizontalOptions="Center"/>
        </Grid>    
    </NavigationPage.TitleView>

    <Grid BackgroundColor="Gray" RowSpacing=".6" ColumnSpacing=".6">

        <Grid.RowDefinitions>
            <RowDefinition Height=".25*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--DAY LABELS-->
        <BoxView Grid.Row="0" Grid.Column="0" BackgroundColor="White"/>
        <Label Grid.Row="0" Grid.Column="0" Text="Mon" FontSize="Micro" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>

        <BoxView Grid.Row="0" Grid.Column="1" BackgroundColor="White"/>
        <Label Grid.Row="0" Grid.Column="1" Text="Tue" FontSize="Micro" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>

        <BoxView Grid.Row="0" Grid.Column="2" BackgroundColor="White"/>
        <Label Grid.Row="0" Grid.Column="2" Text="Wed" FontSize="Micro" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>

        <BoxView Grid.Row="0" Grid.Column="3" BackgroundColor="White"/>
        <Label Grid.Row="0" Grid.Column="3" Text="Thu" FontSize="Micro" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>

        <BoxView Grid.Row="0" Grid.Column="4" BackgroundColor="White"/>
        <Label Grid.Row="0" Grid.Column="4" Text="Fri" FontSize="Micro" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>

        <BoxView Grid.Row="0" Grid.Column="5" BackgroundColor="White"/>
        <Label Grid.Row="0" Grid.Column="5" Text="Sat" FontSize="Micro" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>

        <BoxView Grid.Row="0" Grid.Column="6" BackgroundColor="White"/>
        <Label Grid.Row="0" Grid.Column="6" Text="Sun" FontSize="Micro" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>

        <!--DAYS 1-7-->
        <BoxView Grid.Row="1" Grid.Column="0" BackgroundColor="White"/>
        <StackLayout Grid.Row="1" Grid.Column="0" Spacing="0">
            <Label Text="1" FontSize="Micro" Margin="0,2" HorizontalTextAlignment="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding TapCommand}" CommandParameter="1"/>
                </Label.GestureRecognizers>
            </Label>
            <Label Text="{Binding DailyDetailList[0].Goal1}" IsVisible="{Binding DailyDetailList[0].IsVisible}" 
                   BackgroundColor="PeachPuff" LineBreakMode="NoWrap" Margin="2,1,2,1" FontSize="8" HorizontalTextAlignment="Center"/>
        </StackLayout>

        <BoxView Grid.Row="1" Grid.Column="1" BackgroundColor="White"/>
        <StackLayout Grid.Row="1" Grid.Column="1" Spacing="0">
            <Label Grid.Row="1" Grid.Column="1" Text="2" FontSize="Micro" Margin="0,2" HorizontalTextAlignment="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding TapCommand}" CommandParameter="2"/>
                </Label.GestureRecognizers>
            </Label>
            <Label Text="{Binding DailyDetailList[1].Goal1}" IsVisible="{Binding DailyDetailList[1].IsVisible}" BackgroundColor="PeachPuff" LineBreakMode="NoWrap" Margin="2,1,2,1" FontSize="8" HorizontalTextAlignment="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding TapCommand}" CommandParameter="2"/>
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>

        <BoxView Grid.Row="1" Grid.Column="2" BackgroundColor="White"/>
