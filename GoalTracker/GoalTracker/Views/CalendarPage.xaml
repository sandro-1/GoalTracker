        </Label>
        <BoxView Grid.Row="3" Grid.Column="2" BackgroundColor="White"/>
        <Label Grid.Row="3" Grid.Column="2" Text="17" FontSize="Micro" Margin="0,2" HorizontalTextAlignment="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding TapCommand}" CommandParameter="17"/>
            </Label.GestureRecognizers>
        </Label>
        <BoxView Grid.Row="3" Grid.Column="3" BackgroundColor="White"/>
        <Label Grid.Row="3" Grid.Column="3" Text="18" FontSize="Micro" Margin="0,2" HorizontalTextAlignment="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding TapCommand}" CommandParameter="18"/>
            </Label.GestureRecognizers>
        </Label>
        <BoxView Grid.Row="3" Grid.Column="4" BackgroundColor="White"/>
        <Label Grid.Row="3" Grid.Column="4" Text="19" FontSize="Micro" Margin="0,2" HorizontalTextAlignment="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding TapCommand}" CommandParameter="19"/>
            </Label.GestureRecognizers>
        </Label>
        <BoxView Grid.Row="3" Grid.Column="5" BackgroundColor="White"/>
        <Label Grid.Row="3" Grid.Column="5" Text="20" FontSize="Micro" Margin="0,2" HorizontalTextAlignment="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding TapCommand}" CommandParameter="20"/>
            </Label.GestureRecognizers>
        </Label>
        <BoxView Grid.Row="3" Grid.Column="6" BackgroundColor="White"/>
        <Label Grid.Row="3" Grid.Column="6" Text="21" FontSize="Micro" Margin="0,2" HorizontalTextAlignment="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding TapCommand}" CommandParameter="21"/>
            </Label.GestureRecognizers>
        </Label>

        <!--DAYS 22-28-->
        <BoxView Grid.Row="4" Grid.Column="0" BackgroundColor="White"/>
        <Label Grid.Row="4" Grid.Column="0" Text="22" FontSize="Micro" Margin="0,2" HorizontalTextAlignment="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding TapCommand}" CommandParameter="22"/>
            </Label.GestureRecognizers>
        </Label>
        <BoxView Grid.Row="4" Grid.Column="1" BackgroundColor="White"/>
        <Label Grid.Row="4" Grid.Column="1" Text="23" FontSize="Micro" Margin="0,2" HorizontalTextAlignment="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding TapCommand}" CommandParameter="23"/>
            </Label.GestureRecognizers>
        </Label>
        <BoxView Grid.Row="4" Grid.Column="2" BackgroundColor="White"/>
        <Label Grid.Row="4" Grid.Column="2" Text="24" FontSize="Micro" Margin="0,2" HorizontalTextAlignment="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding TapCommand}" CommandParameter="24"/>
            </Label.GestureRecognizers>
        </Label>
        <BoxView Grid.Row="4" Grid.Column="3" BackgroundColor="White"/>
        <Label Grid.Row="4" Grid.Column="3" Text="25" FontSize="Micro" Margin="0,2" HorizontalTextAlignment="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding TapCommand}" CommandParameter="25"/>
            </Label.GestureRecognizers>
        </Label>
        <BoxView Grid.Row="4" Grid.Column="4" BackgroundColor="White"/>
